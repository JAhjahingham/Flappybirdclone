<body>

    <div id="main-app-container">
        <!-- User ID Display (MANDATORY for multi-user apps) -->
        <div id="user-info">
            Your Player ID: <span id="user-id-display">Loading...</span>
        </div>
        
        <div id="game-and-leaderboard">
            <!-- Game Container -->
            <div id="game-container">
                <div id="score-display">0</div>
                <canvas id="flappyCanvas"></canvas>
                <div id="message-box">
                    <h2 id="message-title">Game Over!</h2>
                    <p>Score: <span id="final-score">0</span></p>
                    <p>Highest Score Saved!</p>
                    <button id="restart-button">Restart Game</button>
                </div>
                <!-- Loading Indicator for Firestore -->
                <div id="loading-indicator" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); display: none; background: rgba(0,0,0,0.7); color: white; padding: 15px; border-radius: 8px; font-size: 1em;">
                    Loading Game Data...
                </div>
            </div>
            
            <!-- Leaderboard Container -->
            <div id="leaderboard-container">
                <h3>Global Top 10 Scores</h3>
                <ul id="leaderboard-list">
                    <!-- Scores will be dynamically inserted here -->
                </ul>
            </div>
        </div>
    </div>

    <script type="module">
        // --- Firebase/Firestore Imports ---
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, collection, addDoc, onSnapshot, query, orderBy, limit, serverTimestamp, setLogLevel } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // Enable debug logging for Firebase
        setLogLevel('Debug');

        // --- Firebase Initialization and Globals ---
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-flappy-app-id';
        const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : {};
        const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;

        let app;
        let db;
        let auth;
        let currentUserId = null;
        let isAuthReady = false;

        // --- DOM Elements ---
        const canvas = document.getElementById('flappyCanvas');
        const ctx = canvas.getContext('2d');
        const scoreDisplay = document.getElementById('score-display');
        const messageBox = document.getElementById('message-box');
        const finalScoreSpan = document.getElementById('final-score');
        const restartButton = document.getElementById('restart-button');
        const userIdDisplay = document.getElementById('user-id-display');
        const leaderboardList = document.getElementById('leaderboard-list');
        const loadingIndicator = document.getElementById('loading-indicator');

        // --- Game Constants ---
        const BIRD_RADIUS = 15;
        const PIPE_WIDTH = 50;
        const PIPE_GAP = 150;
        const PIPE_SPEED = 2;
        const GRAVITY = 0.5;
        const JUMP_VELOCITY = -8;
        const PIPE_SPAWN_INTERVAL = 100; // Frames

        // --- Game State ---
        let bird;
        let pipes = [];
        let score = 0;
        let isGameOver = false;
        let frameCount = 0;
        let gameLoopId;

        // --- Utility Functions (Moved up to ensure definition before calls) ---

        /**
         * Resizes the canvas to maintain aspect ratio and fill the container.
         * Set fixed logical dimensions.
         */
        function resizeCanvas() {
            canvas.width = 480;
            canvas.height = 700;
        }
        window.addEventListener('resize', resizeCanvas);


        /**
         * Real-time function to display the global leaderboard.
         */
        function setupLeaderboardListener() {
            if (!db) {
                console.error("Firestore not initialized.");
                return;
            }

            // Path: /artifacts/{appId}/public/data/leaderboard
            const leaderboardCollectionRef = collection(db, `artifacts/${appId}/public/data/leaderboard`);

            // Query for the top 10 scores, sorted by score descending
            const q = query(leaderboardCollectionRef, orderBy("score", "desc"), limit(10));

            onSnapshot(q, (snapshot) => {
                leaderboardList.innerHTML = ''; // Clear existing list
                let rank = 1;

                if (snapshot.empty) {
                    leaderboardList.innerHTML = '<li>No scores yet! Be the first!</li>';
                }

                snapshot.forEach((doc) => {
                    const scoreData = doc.data();
                    const isCurrentUser = scoreData.userId === currentUserId;

                    const listItem = document.createElement('li');
                    listItem.className = isCurrentUser ? 'highlight' : '';
                    listItem.innerHTML = `
                        <span class="score-rank">${rank}.</span>
                        <span class="user-id-short">${isCurrentUser ? 'YOU' : scoreData.userId}</span>
                        <span class="score-value">${scoreData.score}</span>
                    `;
                    leaderboardList.appendChild(listItem);
                    rank++;
                });
                console.log("Leaderboard updated.");
            }, (error) => {
                console.error("Error setting up leaderboard listener:", error);
            });
        }

        /**
         * Saves the current player's score to Firestore.
         */
        async function saveScore(newScore) {
            if (!db || !currentUserId || newScore === 0) return;

            const leaderboardCollectionRef = collection(db, `artifacts/${appId}/public/data/leaderboard`);

            try {
                // Save the score, user ID, and a timestamp for potential sorting by time
                await addDoc(leaderboardCollectionRef, {
                    score: newScore,
                    userId: currentUserId,
                    timestamp: serverTimestamp(),
                    appId: appId
                });
                console.log("Score saved successfully:", newScore);
            } catch (e) {
                console.error("Error saving score to Firestore:", e);
            }
        }

        /**
         * Initializes Firebase, signs the user in, and starts listeners.
         */
        async function initializeFirebase() {
            try {
                loadingIndicator.style.display = 'block';
                app = initializeApp(firebaseConfig);
                db = getFirestore(app);
                auth = getAuth(app);

                if (initialAuthToken) {
                    await signInWithCustomToken(auth, initialAuthToken);
                } else {
                    await signInAnonymously(auth);
                }

                onAuthStateChanged(auth, (user) => {
                    if (user) {
                        currentUserId = user.uid;
                        userIdDisplay.textContent = currentUserId;
                        isAuthReady = true;
                        
                        // Start the game logic only after authentication is ready
                        resizeCanvas(); // Now guaranteed to be defined
                        resetGame();
                        setupLeaderboardListener(); // Start listening for leaderboard changes
                    } else {
                        userIdDisplay.textContent = 'ERROR: Sign In Failed';
                        isAuthReady = true;
                    }
                    loadingIndicator.style.display = 'none';
                });

            } catch (error) {
                console.error("Firebase initialization failed:", error);
                loadingIndicator.textContent = "Error: Failed to connect to database.";
            }
        }


        // --- Game Objects ---

        class Bird {
            constructor(x, y) {
                this.x = x;
                this.y = y;
                this.velocity = 0;
                this.radius = BIRD_RADIUS;
            }

            draw() {
                ctx.fillStyle = '#f1c40f'; // Yellow bird
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
                ctx.fill();

                // Simple eye
                ctx.fillStyle = '#000';
                ctx.beginPath();
                ctx.arc(this.x + this.radius / 2.5, this.y - this.radius / 4, this.radius / 5, 0, Math.PI * 2);
                ctx.fill();

                // Simple beak
                ctx.fillStyle = '#e67e22'; // Orange beak
                ctx.beginPath();
                ctx.moveTo(this.x + this.radius, this.y - 5);
                ctx.lineTo(this.x + this.radius + 10, this.y);
                ctx.lineTo(this.x + this.radius, this.y + 5);
                ctx.fill();
            }

            update() {
                this.velocity += GRAVITY;
                this.y += this.velocity;
            }

            flap() {
                if (!isGameOver) {
                    this.velocity = JUMP_VELOCITY;
                }
            }
        }

        class Pipe {
            constructor(x, gapY) {
                this.x = x;
                this.width = PIPE_WIDTH;
                this.gapY = gapY; // Y position of the center of the gap
                this.gap = PIPE_GAP;
                this.passed = false;
            }

            draw() {
                ctx.fillStyle = '#2ecc71'; // Green pipe
                
                // Top Pipe
                ctx.fillRect(this.x, 0, this.width, this.gapY - this.gap / 2);
                // Bottom Pipe
                ctx.fillRect(this.x, this.gapY + this.gap / 2, this.width, canvas.height - (this.gapY + this.gap / 2));

                // Add pipe border/shadow (for better definition)
                ctx.strokeStyle = '#16a085';
                ctx.lineWidth = 3;
                ctx.strokeRect(this.x, 0, this.width, this.gapY - this.gap / 2);
                ctx.strokeRect(this.x, this.gapY + this.gap / 2, this.width, canvas.height - (this.gapY + this.gap / 2));
            }

            update() {
                this.x -= PIPE_SPEED;
            }
        }


        // --- Game Logic ---

        function drawFloor() {
            const floorHeight = 100;
            ctx.fillStyle = '#2c3e50'; // Dark ground
            ctx.fillRect(0, canvas.height - floorHeight, canvas.width, floorHeight);

            // Draw grass/texture (lighter top border)
            ctx.fillStyle = '#27ae60';
            ctx.fillRect(0, canvas.height - floorHeight, canvas.width, 10);
        }

        function checkCollisions() {
            // 1. Check top/bottom collision
            if (bird.y - bird.radius <= 0 || bird.y + bird.radius >= canvas.height - 90) { // 90 is floor height
                endGame();
                return;
            }

            // 2. Check pipe collision
            for (let i = 0; i < pipes.length; i++) {
                const p = pipes[i];

                // Check if bird is horizontally aligned with pipe
                if (bird.x + bird.radius > p.x && bird.x - bird.radius < p.x + p.width) {
                    // Check collision with top pipe OR bottom pipe
                    const topPipeBottomY = p.gapY - p.gap / 2;
                    const bottomPipeTopY = p.gapY + p.gap / 2;

                    if (bird.y - bird.radius < topPipeBottomY || bird.y + bird.radius > bottomPipeTopY) {
                        endGame();
                        return;
                    }

                    // Check for scoring
                    if (!p.passed && bird.x > p.x + p.width) {
                        score++;
                        p.passed = true;
                        scoreDisplay.textContent = score;
                    }
                }
            }
        }

        function spawnPipe() {
            // Gap center can be anywhere between 150px from top and 150px from bottom (accounting for floor)
            const minGapY = 150;
            const maxGapY = canvas.height - 150 - 90; // -90 for floor height

            const randomGapY = Math.floor(Math.random() * (maxGapY - minGapY + 1)) + minGapY;
            pipes.push(new Pipe(canvas.width, randomGapY));
        }

        function updateGame() {
            frameCount++;

            // 1. Bird update
            bird.update();

            // 2. Pipes update and spawning
            for (let i = pipes.length - 1; i >= 0; i--) {
                pipes[i].update();
                // Remove pipes that are off-screen
                if (pipes[i].x + pipes[i].width < 0) {
                    pipes.splice(i, 1);
                }
            }

            // Spawn new pipe
            if (frameCount % PIPE_SPAWN_INTERVAL === 0) {
                spawnPipe();
            }

            // 3. Collision check
            checkCollisions();
        }

        function drawGame() {
            // Clear canvas
            ctx.fillStyle = '#70c5ce';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            // Draw all pipes
            pipes.forEach(p => p.draw());

            // Draw floor
            drawFloor();

            // Draw bird
            bird.draw();
        }

        function gameLoop() {
            if (isGameOver) {
                cancelAnimationFrame(gameLoopId);
                return;
            }

            updateGame();
            drawGame();

            gameLoopId = requestAnimationFrame(gameLoop);
        }

        function endGame() {
            isGameOver = true;
            
            // Save the score to the global leaderboard
            if (score > 0 && currentUserId) {
                saveScore(score);
                document.getElementById('message-title').textContent = "SCORE SUBMITTED!";
                document.getElementById('message-title').style.color = "#27ae60"; // Green for success
            } else {
                document.getElementById('message-title').textContent = "GAME OVER!";
                document.getElementById('message-title').style.color = "#d35400"; // Orange default
            }

            // Update message box content and show it
            finalScoreSpan.textContent = score;
            messageBox.style.display = 'block';
            console.log("Game Over! Score:", score);
        }

        function resetGame() {
            if (!isAuthReady) {
                console.log("Authentication not ready, waiting to reset game.");
                return;
            }

            isGameOver = false;
            score = 0;
            frameCount = 0;
            scoreDisplay.textContent = score;
            pipes = [];
            
            // Re-initialize bird to starting position
            bird = new Bird(canvas.width / 4, canvas.height / 2); 

            messageBox.style.display = 'none';

            // Start the loop
            gameLoopId = requestAnimationFrame(gameLoop);
        }


        // --- Event Listeners and Initialization ---

        function handleFlap(event) {
            // Prevent scrolling on mobile devices when tapping
            if (event.type === 'touchstart') {
                event.preventDefault();
            }
            if (isGameOver || !isAuthReady) {
                return;
            }
            bird.flap();
        }

        // For desktop: Spacebar and mouse click
        document.addEventListener('keydown', (e) => {
            if (e.code === 'Space') {
                e.preventDefault(); // Prevent space from scrolling the page
                handleFlap(e);
            }
        });
        canvas.addEventListener('mousedown', handleFlap);
        
        // For mobile: Touch screen
        canvas.addEventListener('touchstart', handleFlap);

        // Restart button
        restartButton.addEventListener('click', resetGame);


        // Initialize Firebase and start the app
        window.onload = initializeFirebase;

    </script>
</body>
</html>
